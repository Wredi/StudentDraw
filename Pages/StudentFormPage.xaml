<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:StudentDraw.ViewModels"
             x:Class="StudentDraw.Pages.StudentFormPage"
             Title="StudentFormPage">
    <StackLayout Orientation="Vertical" VerticalOptions="Start">
        <Entry Placeholder="Enter id" Text="{Binding IdEntry}"/>
        <Entry Placeholder="Enter name" Text="{Binding NameEntry}"/>
        <Entry Placeholder="Enter surname" Text="{Binding SurnameEntry}"/>
        <Button Text="OK" Command="{Binding ApproveFormCommand}"/>
    </StackLayout>
</ContentPage>