<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentDraw.Pages.GradeFormPage"
             Title="GradeFormPage">
    <StackLayout Orientation="Vertical" VerticalOptions="Start">
        <Label Text="Enter name:"/>
        <Entry Placeholder="Enter name" x:Name="gradeName" Text="{Binding Path=NameToEdit, Mode=OneWay}"/>
        <Button Text="OK" Command="{Binding ApproveFormCommand}" CommandParameter="{Binding Source={x:Reference gradeName}, Path=Text}"/>
    </StackLayout>
</ContentPage>